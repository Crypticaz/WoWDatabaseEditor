          "db_column_name": "BoxMoney",
          "value_type": "uint"
        },
        {
          "name": "Box Text",
          "db_column_name": "BoxText",
          "value_type": "string",
          "can_be_null": true
        },
        {
          "name": "Box Broadcast Text ID",
          "db_column_name": "BoxBroadcastTextID",
          "value_type": "int"
        },
        {
          "name": "Verified Build",
          "db_column_name": "VerifiedBuild",
          "value_type": "int"
        }
